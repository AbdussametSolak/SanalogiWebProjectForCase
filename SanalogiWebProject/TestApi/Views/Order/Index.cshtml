@using X.PagedList.Mvc.Core
@using X.PagedList
@using Entity.Concrete
@using X.PagedList.Web.Common
@model IEnumerable<Order>
@{
    ViewBag.Title = "Index";
    Layout = null;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<h2 class="text-center p-3">Order List</h2>


<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Order Date</th>
                <th scope="col">Company Name</th>
                <th scope="col">Product Quantity</th>
                <th scope="col">Product Name</th>
                <th scope="col">Product Price</th>
            </tr>
        </thead>
       <tbody class="table-group-divider">
           @foreach (var item in Model)
            {
                <tr>
                    <td>@item.orderId</td>
                    <td>@item.orderDate</td>
                    <td>@item.companyName</td>
                    <td>@item.productQuantity</td>
                    <td>@item.productName</td>
                    <td>@item.productPrice</td>
                </tr>
            }
       </tbody>
            
    </table>
</div>
<div class="text-center">
    <a class="btn btn-outline-dark text-center" href="~/Order/CreateOrder/">Create Order</a>
</div>

<div class="mt-2">
    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index", new { pageNumber }), new PagedListRenderOptions 
    { 
        ContainerDivClasses=new List<string> { "pagination justify-content-center" },
        LiElementClasses = new List<string> { "page-item" },
        PageClasses = new List<string> { "page-link border border-dark" }
    })
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

